<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mongsangg.stockapp.MainActivity">
    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:background="@drawable/back_1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textview_alram"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="13"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0.8">
                <Button
                    android:id="@+id/button_companylist"
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_height="50dp" />
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/textview_price"
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0.7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/button_buy"
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/button_sell"
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/layout_check"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0.8"

                android:gravity="right">
                <CheckBox
                    android:id="@+id/checkbox1"
                    android:layout_gravity="center_vertical"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="40dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="5dp"
                android:layout_weight="0.8">
                <LinearLayout
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/button_number"
                    android:layout_width="1dp"
                    android:layout_weight="3"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text = "0"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="5dp"
                android:layout_weight="0.8">
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/button_price"
                    android:layout_width="1dp"
                    android:layout_weight="3"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text = "0"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_final"
                android:layout_width="240dp"
                android:layout_height="1dp"
                android:layout_weight="0.5"
                android:background="#00000000"
               />

            <Button
                android:id="@+id/button_save"
                android:layout_gravity="right"
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_weight="1.2"/>

        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/dialog_input1"/>
    <include layout="@layout/dialog_input2"/>
    <include layout="@layout/dialog_input3"/>
    <include layout="@layout/save_layout"/>


</FrameLayout>
